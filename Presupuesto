#include <iostream>

using namespace std;

int main()
{
    int p, Gine, Trau, Pedia;
    cout<<"Ingrese el valor del presupuesto: ";
    cin>>p;
    Gine=p*0.4;
    Trau=p*0.3;
    Pedia=p*0.3;
    cout<<"El presupuesto para Ginecologia es: "<<Gine<<endl;
    cout<<"El presupuesto para Traumatologia es: "<<Trau<<endl;
    cout<<"El presupuesto para Pediatria es: "<<Pedia<<endl;
    
    return 0;
}
